{
  "include": ["./src/**/*", "src/global.d.ts"],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016",
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*", "*"]
    }
  }
}
